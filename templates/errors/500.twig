{% extends 'layouts/app.twig' %}

{% block title %}500 - Server Error | Анализатор страниц{% endblock %}

{% block content %}
<div class="container-lg mt-5">
    <div class="row">
        <div class="col-md-8 col-lg-6 mx-auto">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h1 class="h4 m-0">500 - Внутренняя ошибка сервера</h1>
                </div>
                <div class="card-body">
                    <p>{{ error ?? 'Произошла внутренняя ошибка сервера. Пожалуйста, попробуйте позже.' }}</p>
                    <a href="/" class="btn btn-primary">На главную</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 