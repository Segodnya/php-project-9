{
  "name": "hexlet/code",
  "description": "Page Analyzer - a site that analyzes specified pages for SEO suitability",
  "type": "project",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Hexlet"
    }
  ],
  "require": {
    "php": ">=8.0",
    "vlucas/phpdotenv": "^5.5",
    "guzzlehttp/guzzle": "^7.9",
    "imangazaliev/didom": "^2.0",
    "slim/slim": "^4.12",
    "slim/psr7": "^1.6",
    "slim/flash": "^0.4.0",
    "slim/php-view": "^3.2",
    "php-di/php-di": "^7.0",
    "slim/twig-view": "^3.4",
    "twig/twig": "^3.21"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.10"
  },
  "scripts": {
    "phpcs": "phpcs",
    "phpstan": "phpstan --memory-limit=256M --ansi analyse -c ./phpstan.neon"
  }
}
