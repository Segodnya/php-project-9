{% extends "partials/responsive_table.twig" %}

{% block table_header %}
    <th class="col-1">ID</th>
    <th>Имя</th>
    <th class="col-2">Последняя проверка</th>
    <th class="col-1">Код ответа</th>
{% endblock %}

{% block table_body %}
    {% for url in urls %}
        <tr>
            <td>{{ url.id }}</td>
            <td>
                <a href="/urls/{{ url.id }}">{{ url.name }}</a>
            </td>
            <td>
                {% if url.last_check_created_at is defined %}
                    {{ formatDate(url.last_check_created_at) }}
                {% endif %}
            </td>
            <td>
                {% if url.last_check_status_code is defined %}
                    {{ getStatusBadge(url.last_check_status_code)|raw }}
                {% endif %}
            </td>
        </tr>
    {% endfor %}
{% endblock %}
