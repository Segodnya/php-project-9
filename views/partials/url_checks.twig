{% extends "partials/responsive_table.twig" %}

{% block table_header %}
    <th class="col-1">ID</th>
    <th class="col-1">Код ответа</th>
    <th>h1</th>
    <th>title</th>
    <th>description</th>
    <th class="col-2">Дата создания</th>
{% endblock %}

{% block table_body %}
    {% for check in checks %}
        <tr>
            <td>{{ check.id }}</td>
            <td>{{ getStatusBadge(check.status_code)|raw }}</td>
            <td>{{ check.h1 }}</td>
            <td>{{ check.title }}</td>
            <td>{{ check.description }}</td>
            <td>{{ formatDate(check.created_at) }}</td>
        </tr>
    {% endfor %}
{% endblock %}
