{% extends "layout.twig" %}

{% block content %}
<div class="container-lg mt-5">
    <h1>Сайт: {{ url.name }}</h1>

    {% include "partials/url_details.twig" with {'data_test': 'url', 'include_header': true} %}

    <h2 class="mt-5">Проверки</h2>
    <div class="d-flex gap-2">
        <form method="post" action="/urls/{{ url.id }}/checks">
            <input type="submit" class="btn btn-primary" value="Запустить проверку">
        </form>
        <a href="/urls" class="btn btn-outline-primary">Вернуться</a>
    </div>

    {% include "partials/url_checks.twig" with {'data_test': 'checks', 'include_header': true, 'extra_class': 'mt-3'} %}
</div>
{% endblock %}
